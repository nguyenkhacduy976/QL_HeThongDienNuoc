@model QL_HethongDiennuoc.Models.DTOs.RevenueReportDto
@{
    ViewData["Title"] = "Báo cáo doanh thu";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="bi bi-cash-stack"></i> Báo cáo doanh thu</h2>
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left"></i> Quay lại
    </a>
</div>

<div class="card mb-4">
    <div class="card-header bg-success text-white">
        <i class="bi bi-funnel"></i> Bộ lọc
    </div>
    <div class="card-body">
        <form method="get" asp-action="Revenue">
            <div class="row g-3">
                <div class="col-md-4">
                    <label class="form-label">Từ ngày</label>
                    <input type="date" name="startDate" class="form-control" value="@Model?.StartDate?.ToString("yyyy-MM-dd")" />
                </div>
                <div class="col-md-4">
                    <label class="form-label">Đến ngày</label>
                    <input type="date" name="endDate" class="form-control" value="@Model?.EndDate?.ToString("yyyy-MM-dd")" />
                </div>
                <div class="col-md-4 d-flex align-items-end">
                    <button type="submit" class="btn btn-success w-100">
                        <i class="bi bi-search"></i> Lọc
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>

@if (Model != null)
{
    <div class="row g-3 mb-4">
        <div class="col-md-4">
            <div class="card border-success">
                <div class="card-body text-center">
                    <i class="bi bi-currency-dollar fs-1 text-success"></i>
                    <h4 class="mt-2 text-success">@Model.TotalRevenue.ToString("N0") đ</h4>
                    <p class="text-muted mb-0">Tổng doanh thu</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-primary">
                <div class="card-body text-center">
                    <i class="bi bi-check-circle fs-1 text-primary"></i>
                    <h4 class="mt-2 text-primary">@Model.TotalPaid.ToString("N0") đ</h4>
                    <p class="text-muted mb-0">Đã thu</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-warning">
                <div class="card-body text-center">
                    <i class="bi bi-clock-history fs-1 text-warning"></i>
                    <h4 class="mt-2 text-warning">@Model.TotalPending.ToString("N0") đ</h4>
                    <p class="text-muted mb-0">Chưa thu</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-3 mb-4">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body text-center">
                    <h3 class="text-muted">@Model.TotalBills</h3>
                    <small class="text-muted">Tổng số hóa đơn</small>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body text-center">
                    <h3 class="text-success">@Model.PaidBills</h3>
                    <small class="text-muted">Đã thanh toán</small>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body text-center">
                    <h3 class="text-danger">@Model.PendingBills</h3>
                    <small class="text-muted">Chưa thanh toán</small>
                </div>
            </div>
        </div>
    </div>

    @if (Model.Items.Any())
    {
        <div class="card">
            <div class="card-header bg-transparent d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Doanh thu theo tháng</h5>
                <button class="btn btn-sm btn-success">
                    <i class="bi bi-file-earmark-excel"></i> Xuất Excel
                </button>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Tháng/Năm</th>
                                <th>Số hóa đơn</th>
                                <th>Doanh thu</th>
                                <th>Đã thu</th>
                                <th>Tỷ lệ thu</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Items)
                            {
                                var collectionRate = item.Revenue > 0 ? (item.Paid / item.Revenue * 100) : 0;
                                <tr>
                                    <td><strong>@item.Month.ToString("MM/yyyy")</strong></td>
                                    <td>@item.BillCount</td>
                                    <td class="text-success fw-bold">@item.Revenue.ToString("N0") đ</td>
                                    <td class="text-primary">@item.Paid.ToString("N0") đ</td>
                                    <td>
                                        <div class="progress" style="height: 20px;">
                                            <div class="progress-bar @(collectionRate >= 80 ? "bg-success" : collectionRate >= 50 ? "bg-warning" : "bg-danger")" 
                                                 role="progressbar" 
                                                 style="width: @collectionRate%"
                                                 aria-valuenow="@collectionRate" 
                                                 aria-valuemin="0" 
                                                 aria-valuemax="100">
                                                @collectionRate.ToString("N1")%
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> Không có dữ liệu trong khoảng thời gian này.
        </div>
    }
}
else
{
    <div class="alert alert-info">
        <i class="bi bi-info-circle"></i> Vui lòng chọn khoảng thời gian và nhấn "Lọc".
    </div>
}
