@{
    ViewData["Title"] = "Báo cáo thống kê";
}

<h2><i class="bi bi-graph-up"></i> Báo cáo & Thống kê</h2>

<div class="row g-3 mt-3">
    <div class="col-md-4">
        <div class="card">
            <div class="card-body text-center">
                <i class="bi bi-bar-chart-line fs-1 text-primary"></i>
                <h5 class="mt-3">Báo cáo tiêu thụ</h5>
                <p class="text-muted">Xem báo cáo tiêu thụ điện nước theo khu vực, thời gian</p>
                <button class="btn btn-primary btn-sm" disabled>
                    Đang phát triển
                </button>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-body text-center">
                <i class="bi bi-cash-stack fs-1 text-success"></i>
                <h5 class="mt-3">Báo cáo doanh thu</h5>
                <p class="text-muted">Thống kê doanh thu theo tháng, quý, năm</p>
                <button class="btn btn-success btn-sm" disabled>
                    Đang phát triển
                </button>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-body text-center">
                <i class="bi bi-exclamation-triangle fs-1 text-danger"></i>
                <h5 class="mt-3">Công nợ quá hạn</h5>
                <p class="text-muted">Danh sách hóa đơn quá hạn chưa thanh toán</p>
                <a href="/Reports/Outstanding" class="btn btn-danger btn-sm">
                    Xem ngay
                </a>
            </div>
        </div>
    </div>
</div>

<div class="card mt-4">
    <div class="card-header bg-transparent">
        <h5>Thống kê nhanh</h5>
    </div>
    <div class="card-body">
        <div class="row text-center">
            <div class="col-md-3">
                <div class="border rounded p-3">
                    <h3 class="text-primary">0</h3>
                    <small class="text-muted">Tổng tiêu thụ điện (kWh)</small>
                </div>
            </div>
            <div class="col-md-3">
                <div class="border rounded p-3">
                    <h3 class="text-info">0</h3>
                    <small class="text-muted">Tổng tiêu thụ nước (m³)</small>
                </div>
            </div>
            <div class="col-md-3">
                <div class="border rounded p-3">
                    <h3 class="text-success">0 đ</h3>
                    <small class="text-muted">Doanh thu tháng này</small>
                </div>
            </div>
            <div class="col-md-3">
                <div class="border rounded p-3">
                    <h3 class="text-danger">0 đ</h3>
                    <small class="text-muted">Công nợ chưa thu</small>
                </div>
            </div>
        </div>
    </div>
</div>
