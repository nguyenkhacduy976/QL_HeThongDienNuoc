@model QL_HethongDiennuoc.Models.DTOs.RegisterDto

@{
    ViewData["Title"] = "Đăng ký tài khoản";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0">
                    <i class="bi bi-person-plus-fill me-2"></i>Tạo tài khoản mới
                </h4>
            </div>
            <div class="card-body p-4">
                <form asp-action="Register" method="post">
                    <div class="row">
                        <!-- Username -->
                        <div class="col-md-6 mb-3">
                            <label asp-for="Username" class="form-label">
                                <i class="bi bi-person-fill text-primary"></i> Tên đăng nhập <span class="text-danger">*</span>
                            </label>
                            <input asp-for="Username" class="form-control" placeholder="Nhập tên đăng nhập" required>
                            <span asp-validation-for="Username" class="text-danger"></span>
                            <small class="text-muted">Tên đăng nhập phải là duy nhất</small>
                        </div>

                        <!-- Email -->
                        <div class="col-md-6 mb-3">
                            <label asp-for="Email" class="form-label">
                                <i class="bi bi-envelope-fill text-primary"></i> Email <span class="text-danger">*</span>
                            </label>
                            <input asp-for="Email" type="email" class="form-control" placeholder="example@email.com" required>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <!-- Full Name -->
                        <div class="col-md-6 mb-3">
                            <label asp-for="FullName" class="form-label">
                                <i class="bi bi-card-text text-primary"></i> Họ và tên
                            </label>
                            <input asp-for="FullName" class="form-control" placeholder="Nhập họ và tên đầy đủ">
                            <span asp-validation-for="FullName" class="text-danger"></span>
                        </div>

                        <!-- Role -->
                        <div class="col-md-6 mb-3">
                            <label asp-for="Role" class="form-label">
                                <i class="bi bi-shield-fill text-primary"></i> Vai trò <span class="text-danger">*</span>
                            </label>
                            <select asp-for="Role" class="form-select" required>
                                <option value="">-- Chọn vai trò --</option>
                                <option value="1">Admin</option>
                                <option value="2">Staff</option>
                                <option value="3">Customer</option>
                            </select>
                            <span asp-validation-for="Role" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <!-- Password -->
                        <div class="col-md-6 mb-3">
                            <label asp-for="Password" class="form-label">
                                <i class="bi bi-lock-fill text-primary"></i> Mật khẩu <span class="text-danger">*</span>
                            </label>
                            <input asp-for="Password" type="password" class="form-control" placeholder="Nhập mật khẩu" required>
                            <span asp-validation-for="Password" class="text-danger"></span>
                            <small class="text-muted">Tối thiểu 6 ký tự</small>
                        </div>

                        <!-- Confirm Password -->
                        <div class="col-md-6 mb-3">
                            <label for="confirmPassword" class="form-label">
                                <i class="bi bi-lock-fill text-primary"></i> Xác nhận mật khẩu <span class="text-danger">*</span>
                            </label>
                            <input type="password" id="confirmPassword" name="confirmPassword" class="form-control" placeholder="Nhập lại mật khẩu" required>
                            <small class="text-muted">Nhập lại mật khẩu để xác nhận</small>
                        </div>
                    </div>

                    <div class="alert alert-info">
                        <i class="bi bi-info-circle-fill me-2"></i>
                        <strong>Lưu ý:</strong> 
                        @if (Model?.Role == 3)
                        {
                            <span>Khách hàng có thể cập nhật thông tin chi tiết sau khi đăng nhập lần đầu.</span>
                        }
                        else
                        {
                            <span>Mật khẩu mặc định nên được thay đổi sau lần đăng nhập đầu tiên.</span>
                        }
                    </div>

                    <div class="d-flex gap-2 justify-content-end mt-4">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-x-circle"></i> Hủy
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-circle"></i> Tạo tài khoản
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Validate password match
        document.querySelector('form').addEventListener('submit', function(e) {
            const password = document.querySelector('input[name="Password"]').value;
            const confirmPassword = document.querySelector('input[name="confirmPassword"]').value;
            
            if (password !== confirmPassword) {
                e.preventDefault();
                alert('Mật khẩu xác nhận không khớp!');
                return false;
            }
        });
    </script>
}
