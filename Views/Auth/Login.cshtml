@model QL_HethongDiennuoc.Models.DTOs.LoginDto

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Hệ thống quản lý điện nước thông minh - Đăng nhập để quản lý khách hàng, công tơ, hóa đơn và báo cáo chi tiết.">
    <meta name="keywords" content="quản lý điện nước, phần mềm điện nước, hóa đơn điện nước, quản lý công tơ">
    <meta name="author" content="QL_HethongDiennuoc">
    
    <!-- Open Graph -->
    <meta property="og:title" content="Đăng nhập - Quản lý Điện Nước">
    <meta property="og:description" content="Hệ thống quản lý dịch vụ điện nước hiện đại, chính xác và minh bạch.">
    <meta property="og:type" content="website">
    
    <title>Đăng nhập - Hệ thống Quản lý Điện Nước</title>
    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    
    <link rel="stylesheet" href="~/css/login.css">

</head>
<body>
    <main class="login-wrapper">
        <section class="login-container">
            <!-- Left Side - Branding -->
            <div class="login-brand">
                <div class="brand-content">
                    <div class="brand-icon">
                        <i class="bi bi-lightning-charge-fill" aria-hidden="true"></i>
                    </div>
                    <h1>Quản lý<br>Điện Nước</h1>
                    <p>Giải pháp quản lý thông minh giúp tối ưu quy hoạch và vận hành dịch vụ điện nước hiện đại.</p>
                    
                    <div class="feature-list">
                        <div class="feature-item">
                            <i class="bi bi-shield-check" aria-hidden="true"></i>
                            <span>Bảo mật & An toàn dữ liệu</span>
                        </div>
                        <div class="feature-item">
                            <i class="bi bi-cpu" aria-hidden="true"></i>
                            <span>Tính toán tự động chính xác</span>
                        </div>
                        <div class="feature-item">
                            <i class="bi bi-bar-chart-line" aria-hidden="true"></i>
                            <span>Báo cáo trực quan, chi tiết</span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Right Side - Login Form -->
            <div class="login-form-section">
                <header class="login-header">
                    <h2>Xin chào!</h2>
                    <p>Đăng nhập để quản lý hệ thống của bạn</p>
                </header>

                @if (TempData["Success"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <i class="bi bi-check-circle-fill me-2"></i>@TempData["Success"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }

                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i>
                        @Html.ValidationSummary(false, "", new { @class = "mb-0 list-unstyled" })
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }

                <form asp-action="Login" method="post" autocomplete="on">
                    <div class="form-group">
                        <label asp-for="Username" class="form-label">Tên đăng nhập</label>
                        <div class="input-wrapper">
                            <input asp-for="Username" class="form-control" placeholder="admin" autofocus required aria-required="true">
                            <i class="bi bi-person input-icon" aria-hidden="true"></i>
                        </div>
                        <span asp-validation-for="Username" class="text-danger small mt-1 d-block"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Password" class="form-label">Mật khẩu</label>
                        <div class="input-wrapper">
                            <input asp-for="Password" type="password" class="form-control" placeholder="••••••••" required aria-required="true">
                            <i class="bi bi-lock input-icon" aria-hidden="true"></i>
                        </div>
                        <span asp-validation-for="Password" class="text-danger small mt-1 d-block"></span>
                    </div>

                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="rememberMe">
                        <label class="form-check-label" for="rememberMe">
                            Ghi nhớ phiên đăng nhập
                        </label>
                    </div>

                    <button type="submit" class="btn-login">
                        <span>Đăng nhập hệ thống</span>
                        <i class="bi bi-arrow-right-short" style="font-size: 1.5rem;" aria-hidden="true"></i>
                    </button>
                </form>

                <footer class="login-footer">
                    <p class="mb-0 text-muted small">Thông tin hỗ trợ kỹ thuật: <strong>034 666 4333</strong></p>
                    <div class="credential-pill">
                        Tài khoản mẫu: <strong>admin</strong> / <strong>Admin@123</strong>
                    </div>
                </footer>
            </div>
        </section>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
