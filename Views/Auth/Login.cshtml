@model QL_HethongDiennuoc.Models.DTOs.LoginDto

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Hệ thống quản lý điện nước thông minh - Đăng nhập để quản lý khách hàng, công tơ, hóa đơn và báo cáo chi tiết.">
    <meta name="keywords" content="quản lý điện nước, phần mềm điện nước, hóa đơn điện nước, quản lý công tơ">
    <meta name="author" content="QL_HethongDiennuoc">
    
    <!-- Open Graph -->
    <meta property="og:title" content="Đăng nhập - Quản lý Điện Nước">
    <meta property="og:description" content="Hệ thống quản lý dịch vụ điện nước hiện đại, chính xác và minh bạch.">
    <meta property="og:type" content="website">
    
    <title>Đăng nhập - Hệ thống Quản lý Điện Nước</title>
    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    
    <style>
        :root {
            --primary-gradient: linear-gradient(135deg, #4f46e5 0%, #7c3aed 100%);
            --secondary-gradient: linear-gradient(135deg, #3b82f6 0%, #2dd4bf 100%);
            --glass-bg: rgba(255, 255, 255, 0.85);
            --glass-border: rgba(255, 255, 255, 0.2);
            --text-main: #1e293b;
            --text-muted: #64748b;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Outfit', sans-serif;
            background: #f1f5f9;
            background-image: 
                radial-gradient(at 0% 0%, rgba(79, 70, 229, 0.1) 0px, transparent 50%),
                radial-gradient(at 100% 0%, rgba(124, 58, 237, 0.1) 0px, transparent 50%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
        }

        .login-wrapper {
            width: 100%;
            max-width: 1100px;
            perspective: 1000px;
        }

        .login-container {
            background: var(--glass-bg);
            backdrop-filter: blur(20px);
            border: 1px solid var(--glass-border);
            border-radius: 32px;
            box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            display: grid;
            grid-template-columns: 1.1fr 0.9fr;
            min-height: 650px;
            animation: fadeInScale 0.6s cubic-bezier(0.16, 1, 0.3, 1);
        }

        @@keyframes fadeInScale {
            from { opacity: 0; transform: scale(0.95) translateY(10px); }
            to { opacity: 1; transform: scale(1) translateY(0); }
        }

        /* Left Side - Branding */
        .login-brand {
            background: var(--primary-gradient);
            padding: 80px 60px;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            color: white;
            position: relative;
            overflow: hidden;
        }

        .login-brand::before {
            content: '';
            position: absolute;
            width: 400px;
            height: 400px;
            background: rgba(255, 255, 255, 0.1);
            border-radius: 50%;
            top: -150px;
            left: -150px;
        }

        .login-brand::after {
            content: '';
            position: absolute;
            width: 300px;
            height: 300px;
            background: rgba(255, 255, 255, 0.1);
            border-radius: 50%;
            bottom: -100px;
            right: -100px;
        }

        .brand-content {
            position: relative;
            z-index: 1;
            text-align: center;
        }

        .brand-icon {
            width: 140px;
            height: 140px;
            background: rgba(255, 255, 255, 0.15);
            backdrop-filter: blur(15px);
            border: 1px solid rgba(255, 255, 255, 0.3);
            border-radius: 40px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 40px;
            animation: float 4s ease-in-out infinite;
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
        }

        @@keyframes float {
            0%, 100% { transform: translateY(0px) rotate(0deg); }
            50% { transform: translateY(-15px) rotate(2deg); }
        }

        .brand-icon i {
            font-size: 5rem;
            color: white;
            filter: drop-shadow(0 0 10px rgba(255, 255, 255, 0.3));
        }

        .brand-content h1 {
            font-size: 3.2rem;
            font-weight: 800;
            margin-bottom: 20px;
            line-height: 1.1;
            letter-spacing: -1px;
        }

        .brand-content p {
            font-size: 1.2rem;
            opacity: 0.9;
            line-height: 1.6;
            max-width: 400px;
            margin: 0 auto;
            font-weight: 300;
        }

        .feature-list {
            margin-top: 60px;
            text-align: left;
            display: grid;
            gap: 20px;
        }

        .feature-item {
            display: flex;
            align-items: center;
            background: rgba(255, 255, 255, 0.1);
            padding: 12px 20px;
            border-radius: 16px;
            backdrop-filter: blur(5px);
            transition: transform 0.3s ease;
        }

        .feature-item:hover {
            transform: translateX(10px);
            background: rgba(255, 255, 255, 0.2);
        }

        .feature-item i {
            font-size: 1.4rem;
            margin-right: 15px;
            color: #fff;
        }

        .feature-item span {
            font-weight: 500;
            font-size: 1rem;
        }

        /* Right Side - Login Form */
        .login-form-section {
            padding: 80px 60px;
            background: white;
            display: flex;
            flex-direction: column;
            justify-content: center;
        }

        .login-header {
            margin-bottom: 50px;
        }

        .login-header h2 {
            font-size: 2.4rem;
            font-weight: 700;
            color: var(--text-main);
            margin-bottom: 12px;
            letter-spacing: -0.5px;
        }

        .login-header p {
            color: var(--text-muted);
            font-size: 1.1rem;
        }

        .form-group {
            margin-bottom: 28px;
        }

        .form-label {
            font-weight: 600;
            color: #475569;
            margin-bottom: 10px;
            display: block;
            font-size: 0.95rem;
        }

        .input-wrapper {
            position: relative;
        }

        .form-control {
            padding: 16px 20px 16px 54px;
            border-radius: 16px;
            border: 2px solid #f1f5f9;
            font-size: 1rem;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            background: #f8fafc;
            color: var(--text-main);
            width: 100%;
        }

        .form-control:focus {
            border-color: #6366f1;
            box-shadow: 0 0 0 4px rgba(99, 102, 241, 0.1);
            background: white;
            outline: none;
        }

        .input-icon {
            position: absolute;
            left: 20px;
            top: 50%;
            transform: translateY(-50%);
            color: #94a3b8;
            font-size: 1.3rem;
            transition: color 0.3s ease;
        }

        .form-control:focus + .input-icon {
            color: #6366f1;
        }

        .form-check {
            margin-bottom: 30px;
            display: flex;
            align-items: center;
        }

        .form-check-input {
            width: 20px;
            height: 20px;
            margin-right: 12px;
            border-radius: 6px;
            border: 2px solid #e2e8f0;
            cursor: pointer;
        }

        .form-check-input:checked {
            background-color: #6366f1;
            border-color: #6366f1;
        }

        .form-check-label {
            color: var(--text-muted);
            font-size: 0.95rem;
            cursor: pointer;
        }

        .btn-login {
            background: var(--primary-gradient);
            border: none;
            padding: 18px;
            font-weight: 700;
            color: white;
            border-radius: 16px;
            width: 100%;
            font-size: 1.1rem;
            transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
            cursor: pointer;
            box-shadow: 0 10px 20px -5px rgba(79, 70, 229, 0.3);
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
        }

        .btn-login:hover {
            transform: translateY(-4px);
            box-shadow: 0 20px 30px -10px rgba(79, 70, 229, 0.4);
        }

        .btn-login:active {
            transform: translateY(-1px);
        }

        .alert {
            border-radius: 16px;
            border: none;
            padding: 16px 20px;
            margin-bottom: 30px;
            font-weight: 500;
        }

        .alert-success {
            background: #f0fdf4;
            color: #166534;
        }

        .alert-danger {
            background: #fef2f2;
            color: #991b1b;
        }

        .login-footer {
            margin-top: 40px;
            padding-top: 25px;
            border-top: 2px solid #f1f5f9;
            text-align: center;
        }

        .credential-pill {
            display: inline-block;
            background: #f1f5f9;
            padding: 6px 16px;
            border-radius: 50px;
            font-size: 0.85rem;
            color: var(--text-muted);
            margin-top: 10px;
        }

        .credential-pill strong {
            color: #6366f1;
        }

        /* Responsive */
        @@media (max-width: 992px) {
            .login-container {
                grid-template-columns: 1fr;
                border-radius: 24px;
            }

            .login-brand {
                padding: 50px 40px;
                min-height: auto;
            }

            .login-form-section {
                padding: 50px 40px;
            }

            .brand-content h1 {
                font-size: 2.5rem;
            }

            .feature-list {
                display: none;
            }
        }

        @@media (max-width: 576px) {
            body { padding: 10px; }
            .login-form-section, .login-brand {
                padding: 40px 24px;
            }
            .brand-content h1 { font-size: 2rem; }
            .login-header h2 { font-size: 1.8rem; }
        }
    </style>
</head>
<body>
    <main class="login-wrapper">
        <section class="login-container">
            <!-- Left Side - Branding -->
            <div class="login-brand">
                <div class="brand-content">
                    <div class="brand-icon">
                        <i class="bi bi-lightning-charge-fill" aria-hidden="true"></i>
                    </div>
                    <h1>Quản lý<br>Điện Nước</h1>
                    <p>Giải pháp quản lý thông minh giúp tối ưu quy hoạch và vận hành dịch vụ điện nước hiện đại.</p>
                    
                    <div class="feature-list">
                        <div class="feature-item">
                            <i class="bi bi-shield-check" aria-hidden="true"></i>
                            <span>Bảo mật & An toàn dữ liệu</span>
                        </div>
                        <div class="feature-item">
                            <i class="bi bi-cpu" aria-hidden="true"></i>
                            <span>Tính toán tự động chính xác</span>
                        </div>
                        <div class="feature-item">
                            <i class="bi bi-bar-chart-line" aria-hidden="true"></i>
                            <span>Báo cáo trực quan, chi tiết</span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Right Side - Login Form -->
            <div class="login-form-section">
                <header class="login-header">
                    <h2>Xin chào!</h2>
                    <p>Đăng nhập để quản lý hệ thống của bạn</p>
                </header>

                @if (TempData["Success"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <i class="bi bi-check-circle-fill me-2"></i>@TempData["Success"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }

                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i>
                        @Html.ValidationSummary(false, "", new { @class = "mb-0 list-unstyled" })
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }

                <form asp-action="Login" method="post" autocomplete="on">
                    <div class="form-group">
                        <label asp-for="Username" class="form-label">Tên đăng nhập</label>
                        <div class="input-wrapper">
                            <input asp-for="Username" class="form-control" placeholder="admin" autofocus required aria-required="true">
                            <i class="bi bi-person input-icon" aria-hidden="true"></i>
                        </div>
                        <span asp-validation-for="Username" class="text-danger small mt-1 d-block"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Password" class="form-label">Mật khẩu</label>
                        <div class="input-wrapper">
                            <input asp-for="Password" type="password" class="form-control" placeholder="••••••••" required aria-required="true">
                            <i class="bi bi-lock input-icon" aria-hidden="true"></i>
                        </div>
                        <span asp-validation-for="Password" class="text-danger small mt-1 d-block"></span>
                    </div>

                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="rememberMe">
                        <label class="form-check-label" for="rememberMe">
                            Ghi nhớ phiên đăng nhập
                        </label>
                    </div>

                    <button type="submit" class="btn-login">
                        <span>Đăng nhập hệ thống</span>
                        <i class="bi bi-arrow-right-short" style="font-size: 1.5rem;" aria-hidden="true"></i>
                    </button>
                </form>

                <footer class="login-footer">
                    <p class="mb-0 text-muted small">Thông tin hỗ trợ kỹ thuật: <strong>034 666 4333</strong></p>
                    <div class="credential-pill">
                        Tài khoản mẫu: <strong>admin</strong> / <strong>Admin@123</strong>
                    </div>
                </footer>
            </div>
        </section>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
