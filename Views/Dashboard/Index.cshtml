@using QL_HethongDiennuoc.Models.DTOs
@{
    ViewData["Title"] = "Dashboard - Khách hàng";
}

<style>
.meter-info-card {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    border-radius: 16px;
    padding: 1.5rem;
    color: white;
    height: 100%;
    box-shadow: 0 4px 20px rgba(102, 126, 234, 0.3);
    transition: transform 0.3s ease;
}

.meter-info-card:hover {
    transform: translateY(-5px);
}

.meter-icon {
    font-size: 2.5rem;
    margin-bottom: 0.5rem;
}

.stat-card {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    border-radius: 16px;
    padding: 1.5rem;
    color: white;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s ease;
}

.stat-card:hover {
    transform: translateY(-5px);
}

.stat-card h3 {
    color: white !important;
}

.chart-container {
    position: relative;
    height: 300px;
    margin-top: 1rem;
}
</style>

<h2><i class="bi bi-person-circle"></i> Xin chào, @ViewBag.CustomerName</h2>

<!-- Stats Cards -->
<div class="row g-3 mb-4 mt-3">
    <div class="col-md-4">
        <div class="stat-card" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
            <h6 class="text-white-50">Tổng hóa đơn</h6>
            <h3>@ViewBag.TotalBills</h3>
        </div>
    </div>
    <div class="col-md-4">
        <div class="stat-card" style="background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);">
            <h6 class="text-white-50">Hóa đơn chưa thanh toán</h6>
            <h3>@ViewBag.UnpaidBills</h3>
        </div>
    </div>
    <div class="col-md-4">
        <div class="stat-card" style="background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);">
            <h6 class="text-white-50">Tổng công nợ</h6>
            <h3>@(((decimal)ViewBag.TotalDebt).ToString("N0")) đ</h3>
        </div>
    </div>
</div>

<!-- Meter Information -->
<div class="row g-3 mb-4">
    @if (ViewBag.ElectricMeter != null)
    {
        var electricMeter = (MeterDto)ViewBag.ElectricMeter;
        <div class="col-md-6">
            <div class="meter-info-card" style="background: linear-gradient(135deg, #ffa751 0%, #ffe259 100%);">
                <div class="meter-icon"><i class="bi bi-lightning-charge-fill"></i></div>
                <h5>Công tơ điện</h5>
                <p class="mb-1"><strong>Số công tơ:</strong> @electricMeter.MeterNumber</p>
                <p class="mb-1"><strong>Vị trí:</strong> @electricMeter.Location</p>
                <p class="mb-0"><strong>Ngày lắp:</strong> @electricMeter.InstallDate.ToString("dd/MM/yyyy")</p>
            </div>
        </div>
    }
    
    @if (ViewBag.WaterMeter != null)
    {
        var waterMeter = (MeterDto)ViewBag.WaterMeter;
        <div class="col-md-6">
            <div class="meter-info-card" style="background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);">
                <div class="meter-icon"><i class="bi bi-droplet-fill"></i></div>
                <h5>Công tơ nước</h5>
                <p class="mb-1"><strong>Số công tơ:</strong> @waterMeter.MeterNumber</p>
                <p class="mb-1"><strong>Vị trí:</strong> @waterMeter.Location</p>
                <p class="mb-0"><strong>Ngày lắp:</strong> @waterMeter.InstallDate.ToString("dd/MM/yyyy")</p>
            </div>
        </div>
    }
</div>

<!-- Consumption Chart -->
@if (((Dictionary<string, decimal>)ViewBag.MonthlyConsumption).Any())
{
    <div class="card mb-4">
        <div class="card-header bg-transparent">
            <h5><i class="bi bi-bar-chart-fill"></i> Biểu đồ tiêu thụ 6 tháng gần đây</h5>
        </div>
        <div class="card-body">
            <div class="chart-container">
                <canvas id="consumptionChart"></canvas>
            </div>
        </div>
    </div>
}

<!-- Recent Bills -->
<div class="card">
    <div class="card-header bg-transparent d-flex justify-content-between align-items-center">
        <h5 class="mb-0"><i class="bi bi-receipt"></i> Hóa đơn gần đây</h5>
        <a href="@Url.Action("MyBills", "Bills")" class="btn btn-sm btn-primary">
            <i class="bi bi-eye"></i> Xem tất cả
        </a>
    </div>
    <div class="card-body">
        @if (((List<BillDto>)ViewBag.MyBills).Any())
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Số HĐ</th>
                            <th>Loại DV</th>
                            <th>Ngày phát hành</th>
                            <th>Hạn thanh toán</th>
                            <th>Tiêu thụ</th>
                            <th>Số tiền</th>
                            <th>Trạng thái</th>
                            <th>PDF</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var bill in (List<BillDto>)ViewBag.MyBills)
                        {
                            <tr>
                                <td><strong>@bill.BillNumber</strong></td>
                                <td>
                                    @if (bill.ServiceType == "Electric")
                                    {
                                        <span class="badge bg-warning text-dark"><i class="bi bi-lightning-fill"></i> Điện</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-info"><i class="bi bi-droplet-fill"></i> Nước</span>
                                    }
                                </td>
                                <td>@bill.IssueDate.ToString("dd/MM/yyyy")</td>
                                <td>@bill.DueDate.ToString("dd/MM/yyyy")</td>
                                <td>@bill.Consumption.ToString("N0") @(bill.ServiceType == "Electric" ? "kWh" : "m³")</td>
                                <td class="fw-bold">@bill.Amount.ToString("N0") đ</td>
                                <td>
                                    @if (bill.Status == "Paid")
                                    {
                                        <span class="badge bg-success"><i class="bi bi-check-circle-fill"></i> Đã thanh toán</span>
                                    }
                                    else if (bill.DueDate < DateTime.Now)
                                    {
                                        <span class="badge bg-danger"><i class="bi bi-exclamation-triangle-fill"></i> Quá hạn</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning text-dark"><i class="bi bi-clock-fill"></i> Chưa thanh toán</span>
                                    }
                                </td>
                                <td>
                                    <a href="/api/bills/@bill.Id/pdf" class="btn btn-sm btn-success" target="_blank" title="Tải PDF">
                                        <i class="bi bi-file-pdf"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="alert alert-info mb-0">
                <i class="bi bi-info-circle"></i> Chưa có hóa đơn nào.
            </div>
        }
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        @if (((Dictionary<string, decimal>)ViewBag.MonthlyConsumption).Any())
        {
            var monthlyData = (Dictionary<string, decimal>)ViewBag.MonthlyConsumption;
            <text>
            const ctx = document.getElementById('consumptionChart');
            new Chart(ctx, {
                type: 'line',
                data: {
                    labels: @Html.Raw(System.Text.Json.JsonSerializer.Serialize(monthlyData.Keys)),
                    datasets: [{
                        label: 'Tiêu thụ (kWh/m³)',
                        data: @Html.Raw(System.Text.Json.JsonSerializer.Serialize(monthlyData.Values)),
                        borderColor: 'rgb(102, 126, 234)',
                        backgroundColor: 'rgba(102, 126, 234, 0.1)',
                        tension: 0.4,
                        fill: true
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            display: true,
                            position: 'top'
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true
                        }
                    }
                }
            });
            </text>
        }
    </script>
}
