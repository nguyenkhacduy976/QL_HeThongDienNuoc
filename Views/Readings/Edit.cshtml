@using QL_HethongDiennuoc.Models.DTOs
@model UpdateReadingDto

@{
    ViewData["Title"] = "Sửa chỉ số";
    var reading = ViewBag.Reading as ReadingDto;
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-pencil-square"></i> Sửa chỉ số</h2>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Quay lại
        </a>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-warning text-dark">
                    <h5 class="mb-0"><i class="bi bi-pencil-square"></i> Chỉnh sửa chỉ số điện nước</h5>
                </div>
                <div class="card-body">
                    @if (reading != null)
                    {
                        <div class="alert alert-secondary mb-4">
                            <div class="row">
                                <div class="col-md-4">
                                    <strong>Công tơ:</strong> @reading.MeterNumber
                                </div>
                                <div class="col-md-4">
                                    <strong>Loại:</strong> 
                                    @if (reading.MeterType == "Electric")
                                    {
                                        <span class="badge bg-warning text-dark">Điện</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-info">Nước</span>
                                    }
                                </div>
                                <div class="col-md-4">
                                    <strong>Khách hàng:</strong> @reading.CustomerName
                                </div>
                            </div>
                            <div class="row mt-2">
                                <div class="col-md-4">
                                    <strong>Chỉ số cũ:</strong> @reading.PreviousReading.ToString("N0")
                                </div>
                            </div>
                        </div>
                    }

                    <form asp-action="Edit" method="post">
                        @Html.AntiForgeryToken()

                        <div class="mb-3">
                            <label asp-for="ReadingDate" class="form-label fw-bold">Ngày ghi <span class="text-danger">*</span></label>
                            <input asp-for="ReadingDate" type="datetime-local" class="form-control" />
                            <span asp-validation-for="ReadingDate" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="CurrentReading" class="form-label fw-bold">Chỉ số mới <span class="text-danger">*</span></label>
                            <input asp-for="CurrentReading" type="number" step="0.01" class="form-control" />
                            <span asp-validation-for="CurrentReading" class="text-danger"></span>
                            @if (reading != null)
                            {
                                <small class="text-muted">Chỉ số mới phải >= @reading.PreviousReading.ToString("N0")</small>
                            }
                        </div>

                        <div class="mb-3">
                            <label asp-for="Notes" class="form-label fw-bold">Ghi chú</label>
                            <textarea asp-for="Notes" class="form-control" rows="3" placeholder="Ghi chú thêm (nếu có)"></textarea>
                        </div>

                        <div class="alert alert-warning">
                            <i class="bi bi-exclamation-triangle"></i>
                            <strong>Lưu ý:</strong> Không thể sửa chỉ số đã tạo hóa đơn!
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-warning">
                                <i class="bi bi-check-lg"></i> Cập nhật
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-x-lg"></i> Hủy
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
