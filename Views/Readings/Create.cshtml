@using QL_HethongDiennuoc.Models.DTOs
@model CreateReadingDto

@{
    ViewData["Title"] = "Ghi chỉ số mới";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-clipboard-data"></i> Ghi chỉ số mới</h2>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Quay lại
        </a>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-pencil-square"></i> Nhập chỉ số điện nước</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        @Html.AntiForgeryToken()

                        <div class="mb-3">
                            <label class="form-label fw-bold">Công tơ <span class="text-danger">*</span></label>
                            <select asp-for="MeterId" asp-items="@ViewBag.Meters" class="form-select">
                                <option value="">-- Chọn công tơ --</option>
                            </select>
                            <span asp-validation-for="MeterId" class="text-danger"></span>
                            <small class="text-muted">Chọn công tơ cần ghi chỉ số</small>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ReadingDate" class="form-label fw-bold">Ngày ghi <span class="text-danger">*</span></label>
                            <input asp-for="ReadingDate" type="datetime-local" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm")" />
                            <span asp-validation-for="ReadingDate" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="CurrentReading" class="form-label fw-bold">Chỉ số mới <span class="text-danger">*</span></label>
                            <input asp-for="CurrentReading" type="number" step="0.01" class="form-control" placeholder="Nhập chỉ số mới" />
                            <span asp-validation-for="CurrentReading" class="text-danger"></span>
                            <small class="text-muted">Chỉ số mới phải lớn hơn hoặc bằng chỉ số cũ</small>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Notes" class="form-label fw-bold">Ghi chú</label>
                            <textarea asp-for="Notes" class="form-control" rows="3" placeholder="Ghi chú thêm (nếu có)"></textarea>
                        </div>

                        <div class="alert alert-info">
                            <i class="bi bi-info-circle"></i>
                            <strong>Lưu ý:</strong> Tiêu thụ sẽ được tự động tính = Chỉ số mới - Chỉ số cũ
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-lg"></i> Lưu chỉ số
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-x-lg"></i> Hủy
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
