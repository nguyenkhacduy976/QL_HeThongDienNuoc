@using QL_HethongDiennuoc.Models.DTOs
@model GenerateBillDto

@{
    ViewData["Title"] = "Tạo Hóa đơn";
    var selectedReadingId = ViewBag.SelectedReadingId as int?;
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-receipt"></i> Tạo Hóa đơn mới</h2>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Quay lại
        </a>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0"><i class="bi bi-calculator"></i> Tính tiền theo bậc thang</h5>
                </div>
                <div class="card-body">
                    @if (!((IEnumerable<Microsoft.AspNetCore.Mvc.Rendering.SelectListItem>)ViewBag.UnbilledReadings).Any())
                    {
                        <div class="alert alert-warning">
                            <i class="bi bi-exclamation-triangle"></i>
                            <strong>Không có chỉ số nào cần tạo hóa đơn!</strong>
                            <p class="mb-0 mt-2">Tất cả chỉ số điện nước đã được tạo hóa đơn. Vui lòng <a asp-controller="Readings" asp-action="Create">ghi chỉ số mới</a> trước.</p>
                        </div>
                    }
                    else
                    {
                        <form asp-action="Generate" method="post">
                            @Html.AntiForgeryToken()

                            <div class="mb-3">
                                <label class="form-label fw-bold">Chọn chỉ số <span class="text-danger">*</span></label>
                                <select asp-for="ReadingId" asp-items="@ViewBag.UnbilledReadings" class="form-select">
                                    <option value="">-- Chọn chỉ số cần tạo hóa đơn --</option>
                                </select>
                                <span asp-validation-for="ReadingId" class="text-danger"></span>
                                <small class="text-muted">Chọn chỉ số điện nước chưa có hóa đơn</small>
                            </div>

                            <div class="mb-3">
                                <label asp-for="DueDate" class="form-label fw-bold">Hạn thanh toán</label>
                                <input asp-for="DueDate" type="date" class="form-control" value="@DateTime.Now.AddDays(30).ToString("yyyy-MM-dd")" />
                                <small class="text-muted">Mặc định là 30 ngày kể từ hôm nay</small>
                            </div>

                            <div class="alert alert-info">
                                <i class="bi bi-info-circle"></i>
                                <strong>Tự động tính tiền bậc thang:</strong>
                                <p class="mb-0 mt-2">Hệ thống sẽ tự động áp dụng biểu giá bậc thang để tính số tiền phải trả dựa trên mức tiêu thụ.</p>
                            </div>

                            <div class="d-flex gap-2">
                                <button type="submit" class="btn btn-success">
                                    <i class="bi bi-check-lg"></i> Tạo hóa đơn
                                </button>
                                <a asp-action="Index" class="btn btn-secondary">
                                    <i class="bi bi-x-lg"></i> Hủy
                                </a>
                            </div>
                        </form>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
